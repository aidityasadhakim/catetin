{
  "$schema": "Catetin Design System v2.0",
  "description": "Pixel Renaissance Design System - A fusion of classical art, pixel aesthetics, and gothic typography",

  "philosophy": {
    "core": "Digital Classicism - Resurrection of the sublime through the digital lens",
    "aesthetic": "Pixelated Renaissance - Gothic typography, dithered textures, classical majesty",
    "principles": [
      "The pixel is the brushstroke - embrace digital texture",
      "Gothic authority - typography that commands attention",
      "Nature as architecture - lush gardens and vibrant skies as structural elements",
      "Framed elegance - interfaces that float like paintings",
      "Timeless grandeur - evoke history without mimicking it"
    ],
    "antiPatterns": [
      "NO purple/blue gradients on white",
      "NO generic fonts (Inter, Roboto, Arial, SF Pro, Open Sans, system-ui)",
      "NO hero-CTA-features-testimonials templates",
      "NO abstract blobs or generic geometric shapes",
      "NO pure black or pure white",
      "NO gradient backgrounds everywhere",
      "NO same border-radius on everything",
      "NO shadows on every card",
      "NO perfect symmetry without purpose"
    ]
  },

  "typography": {
    "families": {
      "headline": {
        "name": "UnifrakturMaguntia",
        "fallback": "'Chomsky', 'Cloister Black', cursive",
        "use": "Hero sections, major campaign titles, dramatic statements",
        "character": "Gothic, ornate, historical, commanding"
      },
      "subheadline": {
        "name": "Cinzel Decorative",
        "fallback": "serif",
        "use": "Section headers, collection titles",
        "character": "Roman, inscribed, elegant"
      },
      "body": {
        "name": "EB Garamond",
        "fallback": "'Times New Roman', serif",
        "use": "Paragraphs, descriptions, journal entries",
        "character": "Academic, timeless, highly readable"
      },
      "ui": {
        "name": "Cinzel",
        "fallback": "serif",
        "use": "Navigation, buttons, labels, pills",
        "character": "Formal, structured, precise"
      },
      "mono": {
        "name": "JetBrains Mono",
        "fallback": "monospace",
        "use": "Technical details, coordinates, dates",
        "character": "Modern contrast to classical elements"
      }
    },
    "scale": {
      "xs": { "size": "11px", "lineHeight": 1.4, "letterSpacing": "0.05em" },
      "sm": { "size": "13px", "lineHeight": 1.5, "letterSpacing": "0.02em" },
      "base": { "size": "16px", "lineHeight": 1.6, "letterSpacing": "0" },
      "lg": { "size": "20px", "lineHeight": 1.5, "letterSpacing": "-0.01em" },
      "xl": { "size": "28px", "lineHeight": 1.3, "letterSpacing": "-0.02em" },
      "2xl": { "size": "36px", "lineHeight": 1.2, "letterSpacing": "-0.02em" },
      "3xl": { "size": "48px", "lineHeight": 1.1, "letterSpacing": "-0.03em" },
      "4xl": { "size": "64px", "lineHeight": 1.05, "letterSpacing": "-0.03em" },
      "5xl": { "size": "80px", "lineHeight": 1.0, "letterSpacing": "-0.04em" },
      "hero": { "size": "clamp(3.5rem, 8vw, 6rem)", "lineHeight": 0.95, "letterSpacing": "-0.02em" }
    }
  },

  "colors": {
    "note": "Palette extracted from Orion pixel-art imagery - vibrant nature tones and stone",
    
    "nature": {
      "sky": "hsl(198, 85%, 65%)",
      "skyDeep": "hsl(205, 75%, 45%)",
      "foliage": "hsl(138, 45%, 35%)",
      "foliageDark": "hsl(145, 55%, 20%)",
      "foliageLight": "hsl(130, 50%, 45%)",
      "sunlight": "hsl(55, 90%, 85%)"
    },
    
    "earth": {
      "gold": "hsl(45, 85%, 65%)",
      "goldDim": "hsl(42, 65%, 50%)",
      "path": "hsl(35, 70%, 60%)",
      "stone": "hsl(40, 15%, 85%)",
      "stoneShadow": "hsl(40, 10%, 65%)",
      "marble": "hsl(40, 20%, 94%)"
    },

    "ui": {
      "background": "hsl(40, 20%, 96%)",
      "surface": "hsla(40, 20%, 96%, 0.8)",
      "surfaceBlur": "blur(12px)",
      "text": "hsl(145, 60%, 10%)",
      "textMuted": "hsl(145, 30%, 30%)",
      "border": "hsla(145, 30%, 30%, 0.2)"
    },

    "semantic": {
      "primary": "hsl(45, 85%, 65%)",
      "secondary": "hsl(138, 45%, 35%)",
      "accent": "hsl(198, 85%, 65%)"
    }
  },

  "components": {
    "buttons": {
      "pill": {
        "borderRadius": "9999px",
        "padding": "12px 32px",
        "fontFamily": "Cinzel",
        "textTransform": "none",
        "background": "hsla(40, 20%, 96%, 0.9)",
        "border": "1px solid hsla(145, 30%, 30%, 0.1)",
        "backdropFilter": "blur(4px)",
        "boxShadow": "0 4px 12px hsla(0, 0%, 0%, 0.1)"
      },
      "cta": {
        "background": "var(--catetin-nature-sky)",
        "text": "white",
        "borderRadius": "9999px",
        "padding": "16px 48px",
        "fontFamily": "Cinzel",
        "boxShadow": "0 10px 25px hsla(198, 85%, 65%, 0.4)"
      }
    },
    "cards": {
      "glass": {
        "background": "hsla(40, 20%, 96%, 0.6)",
        "backdropFilter": "blur(16px)",
        "border": "1px solid hsla(255, 100%, 100%, 0.3)",
        "borderRadius": "0px",
        "boxShadow": "0 8px 32px hsla(0, 0%, 0%, 0.05)"
      },
      "frame": {
        "border": "1px solid var(--catetin-earth-gold)",
        "background": "transparent",
        "padding": "2px"
      }
    }
  },

  "effects": {
    "dither": {
      "description": "Pixel art dithering effect for backgrounds or images",
      "style": "url('/textures/dither-pattern.png') repeat"
    },
    "grain": {
      "opacity": "0.05",
      "blendMode": "overlay"
    },
    "gradients": {
      "atmosphere": "linear-gradient(to bottom, var(--catetin-nature-sky) 0%, var(--catetin-nature-skyDeep) 100%)",
      "overlay": "linear-gradient(to top, hsla(145, 55%, 10%, 0.8) 0%, transparent 50%)"
    }
  },

  "layout": {
    "grid": {
      "base": "12px",
      "gutter": "24px"
    },
    "container": {
      "maxWidth": "1600px",
      "padding": "48px"
    }
  },

  "cssCustomProperties": {
    "prefix": "--catetin-"
  }
}
